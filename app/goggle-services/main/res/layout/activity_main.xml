<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F3DCE4">

    <TextView
        android:id="@+id/instatxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:textStyle="bold|italic"
        android:textSize="30dp"

        android:fontFeatureSettings="cursive"
        android:layout_marginTop="70dp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/instanme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_below="@id/instatxt"
        android:hint="Phone number email or username"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/instapswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_below="@id/instanme"
        android:hint="Passwoard"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/instalogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instapswrd"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="login"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#364FDD"/>
    <TextView
        android:id="@+id/instaOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instalogin"
        android:text="-------------OR--------------"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFeatureSettings="cursive"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instafb"
        android:layout_below="@id/instaOR"
        android:text="Login with facebook"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#152BA1"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/frgt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instafb"
        android:text="forgot password ?"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#e2e2e2"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up"
        android:text="sign_up"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" />
</RelativeLayout>
